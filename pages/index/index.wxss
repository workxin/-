.scroll-view {
  overflow: hidden;
  width: 100%;
  height: 50px;
  line-height: 50px;
  white-space:nowrap;
  background: #00bbec;
  color:#fff;
  z-index: 3;
  border-bottom: 1px solid #1db5fe;
}
.scroll-view-item {
  display:inline-block;
  margin:6px;
}
.scroll-view-item.active{
  color:#cfdce2;
}
